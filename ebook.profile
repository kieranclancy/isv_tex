# ebook format

# Set various dimensions (all are measured in points)

page_width 360
page_height 540

# left and right margins
left_margin 54
right_margin 54
top_margin 54
bottom_margin 36

# for marginal cross-references
marginpar_width 43
marginpar_margin 4

# dimensions of solid book tabs
booktab_width 27
booktab_height 115
# and the text on the book tabs
booktab_fontsize 12
booktab_filename urw-palladio-l-roman.ttf

# Limit vertical positioning of booktabs.
# If the next book table would be lower down than allowed,
# then it will instead be placed at the upper limit
booktab_upperlimit 36
booktab_lowerlimit 430

# Set fonts and font sizes
passageheader_filename urw-palladio-l-roman.ttf
passageheader_fontsize 10
passageinfo_filename urw-palladio-l-italic.ttf
passageinfo_fontsize 10
header_filename urw-palladio-l-roman.ttf
bookpretitle_filename urw-palladio-l-roman.ttf
bookpretitle_fontsize 12
bookpretitle_smallcaps 9
booktitle_filename urw-palladio-l-bold.ttf
booktitle_fontsize 20
booktitle_smallcaps 15
redletter_filename urw-palladio-l-roman.ttf
blackletter_filename urw-palladio-l-roman.ttf
blackletter_fontsize 12
divine_filename urw-palladio-l-roman.ttf
divine_fontsize 12
divine_smallcaps 9
redletter_filename urw-palladio-l-roman.ttf
redletter_fontsize 12
versenum_filename urw-palladio-l-roman.ttf
versenum_fontsize 9
versenum_ydelta -4
chapternum_filename urw-palladio-l-bold.ttf
chapternum_fontsize 36
chapternum_linecount 2
chapternum_ydelta 16
footnotemark_filename urw-palladio-l-bold.ttf
footnotemark_fontsize 9
footnotemark_ydelta -2
footnotemark_smallcaps 0
footnote_filename urw-palladio-l-roman.ttf
footnote_fontsize 8
footnotebib_filename urw-palladio-l-italic.ttf
footnotebib_fontsize 8
footnoteversenum_filename urw-palladio-l-italic.ttf
footnoteversenum_fontsize 6
footnoteversenum_ydelta -3
footnotemarkinfootnote_filename urw-palladio-l-bold.ttf
footnotemarkinfootnote_fontsize 6
footnotemarkinfootnote_ydelta -3
footnotemarkinfootnote_smallcaps 0
crossref_filename urw-palladio-l-roman.ttf
crossref_fontsize 7
crossrefmarker_filename urw-palladio-l-bold.ttf
crossrefmarker_fontsize 7

line_spacing 1.2

footnoterule_width 0.5
footnoterule_length 100
footnoterule_ydelta 0

crossref_min_vspace 6
crossref_column_width 36